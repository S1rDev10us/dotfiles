{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "schema": {
            "type": "string",
            "const": "./settingsSchema.json"
        },
        "systemConfig": {
            "type": "object",
            "properties": {
                "systemArchitecture": {
                    "type": "string"
                },
                "hostname": {
                    "type": "string"
                },
                "desktop-environment": {
                    "oneOf": [
                        {
                            "const": "gnome"
                        },
                        {
                            "const": ""
                        },
                        {
                            "const": "hyprland"
                        }
                    ]
                },
                "headless": {
                    "type": "boolean"
                },
                "configLocation": {
                    "type": "string"
                },
                "nvidia": {
                    "type": "boolean"
                }
            },
            "required": [
                "hostname",
                "desktop-environment",
                "systemArchitecture",
                "headless",
                "configLocation",
                "nvidia"
            ]
        },
        "userConfig": {
            "type": "object",
            "properties": {
                "profile": {
                    "oneOf": [
                        {
                            "const": "personal"
                        },
                        {
                            "const": "work"
                        }
                    ]
                },
                "background": {
                    "type": "string"
                },
                "theme": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "gitName": {
                    "type": "string"
                },
                "gitEmail": {
                    "type": "string"
                },
                "games": {
                    "type": "boolean"
                }
            },
            "required": [
                "profile",
                "background",
                "username",
                "name",
                "games"
            ]
        }
    },
    "required": [
        "$schema",
        "systemConfig",
        "userConfig"
    ]
}